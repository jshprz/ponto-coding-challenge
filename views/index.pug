extends layout.pug

block content
    
    div.container
        p.text-center 
            b Create Transaction
        div#create-transaction-form
            label(for="name") Name: 
            input.form-control#name(type="text", placeholder="Write name...")
            span.text-danger.name
            br
            label(for="message") Message: 
            textarea.form-control#message(type="text", placeholder="Write some message...")
            span.text-danger.message
            br
            label(for="amount") Amount ($): 
            input.form-control#amount(type="number", placeholder="Write amount...")
            span.text-danger.amount
            br
            button.btn.btn-primary#create-transaction
                span Save
                div.spinner-border.save-spinner(hidden, role="status")
                    span.sr-only Loading...

        p.text-center 
            b Search Transaction
        div#search-form
            input.form-control#search(type="text")
            button.btn.btn-danger#mic-listen
                svg#mic-mute-icon(width="1em", height="1em", viewBox="0 0 16 16", class="bi bi-mic-mute-fill", fill="currentColor", xmlns="http://www.w3.org/2000/svg")
                    path(fill-rule="evenodd", d="M12.734 9.613A4.995 4.995 0 0 0 13 8V7a.5.5 0 0 0-1 0v1c0 .274-.027.54-.08.799l.814.814zm-2.522 1.72A4 4 0 0 1 4 8V7a.5.5 0 0 0-1 0v1a5 5 0 0 0 4.5 4.975V15h-3a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-3v-2.025a4.973 4.973 0 0 0 2.43-.923l-.718-.719zM11 7.88V3a3 3 0 0 0-5.842-.963L11 7.879zM5 6.12l4.486 4.486A3 3 0 0 1 5 8V6.121zm8.646 7.234l-12-12 .708-.708 12 12-.708.707z")

                svg#mic-listen-icon(width="1em", height="1em", viewBox="0 0 16 16", class="bi bi-mic-fill", fill="currentColor", xmlns="http://www.w3.org/2000/svg")
                    path(d="M5 3a3 3 0 0 1 6 0v5a3 3 0 0 1-6 0V3z")
                    path(fill-rule="evenodd", d="M3.5 6.5A.5.5 0 0 1 4 7v1a4 4 0 0 0 8 0V7a.5.5 0 0 1 1 0v1a5 5 0 0 1-4.5 4.975V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 .5-.5z")
        div#search-result